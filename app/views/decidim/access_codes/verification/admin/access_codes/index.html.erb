<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
      <%= link_to t(".new"), new_access_code_path, class: "button tiny button--title" %>
    </h2>
  </div>
  <div class="card-section">
    <table class="table-list">
      <thead>
        <tr>
          <th><%= t(".email") %></th>
          <th><%= t(".created_at") %></th>
          <th><%= t(".code") %></th>
          <th><%= t(".times_used") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% access_codes.each do |access_code| %>
          <tr>
            <td>
              <%= access_code.email %>
            </td>
            <td>
              <%= l access_code.created_at, format: :long %>
            </td>
            <td>
              <%= access_code.code %>
            </td>
            <td>
              <%= access_code.times_used %> / <%= access_code.maximum_uses %>
            </td>
            <td class="table-list__actions">
              <%= icon_link_to "circle-x",
                              access_code_path(access_code.id),
                              t(".remove_access"),
                              method: :delete,
                              class: "action-icon--delete" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate access_codes, theme: "decidim" %>
  </div>
</div>
